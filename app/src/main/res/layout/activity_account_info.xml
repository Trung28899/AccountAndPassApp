<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".AccountInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAccountNameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#E90"
            android:textSize="35dp"
            android:layout_marginTop="140dp" />

        <TextView
            android:id="@+id/textViewUserNameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName: "
            android:layout_marginLeft="8dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewPasswordInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Password: "
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewOtherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="300dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="@drawable/buttonround"/>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="300dp"
            android:layout_marginLeft="54dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Delete"
            android:background="@drawable/buttonrounddelete"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>