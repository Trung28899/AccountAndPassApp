<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".AddAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewUserName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Trung Trinh !"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editAccountName"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:textAlignment="center"
            android:ems="10"
            android:hint="Enter Account Name"
            android:background="@drawable/round"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="32dp" />

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:ems="10"
            android:hint="Enter User Name"
            android:background="@drawable/round"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:ems="10"
            android:hint="Enter Password"
            android:background="@drawable/round"/>

        <Button
            android:id="@+id/buttonAddAccount"
            android:layout_width="310dp"
            android:layout_marginLeft="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Add Account"
            android:background="@drawable/buttonround"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="186dp" />

        <TextView
            android:id="@+id/textViewArtistListing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account List"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>


        <ListView
            android:id="@+id/listViewAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="218dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>